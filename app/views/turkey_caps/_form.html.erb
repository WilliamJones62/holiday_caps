<%= form_with(model: turkey_cap, local: true) do |form| %>
  <% if turkey_cap.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(turkey_cap.errors.count, "error") %> prohibited this turkey_cap from being saved:</h2>

      <ul>
      <% turkey_cap.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th> <%= form.label :dc, "DC" %> </th>
        <th> <%= form.label :channel %> </th>
        <th> <%= form.label :part %> </th>
        <th> <%= form.label :cap %> </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% if @new %>
          <td> <%= form.select :dc, @dc, {} %> </td>
          <td> <%= form.select :channel, @channel, {} %> </td>
          <td> <%= form.select :part, @part, {} %> </td>
        <% else %>
          <td> <%= form.text_field :dc, :size=>"3", readonly: true, id: :turkey_cap_dc %>  </td>
          <td> <%= form.text_field :channel, :size=>"8", readonly: true, id: :turkey_cap_channel %> </td>
          <td> <%= form.text_field :part, :size=>"10", readonly: true, id: :turkey_cap_part %> </td>
        <% end %>
        <td> <%= form.number_field :cap, id: :turkey_cap_cap, max: 9999 %> </td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
